@model IEnumerable<OnlineShop.Web.Models.CartElementViewModel>
@*<h2>ViewCart</h2>*@
@{
    decimal totalPrice = 0;
}
<table class="table-bordered">
    <tr>
        <td>Product</td>
        <td>Count</td>   
        <td>Price</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>       
            <td>@item.Count</td>       
            <td>@item.Price</td>
        </tr>
        totalPrice += item.Price;
    }
</table>
<b>Total price is: @totalPrice</b>
